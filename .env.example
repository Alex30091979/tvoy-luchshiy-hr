# Database (sync URL for alembic/RQ workers)
DB_URL=postgresql+asyncpg://seo:seo@localhost:5432/seo_agent
DATABASE_URL_SYNC=postgresql://seo:seo@localhost:5432/seo_agent

# Redis
REDIS_URL=redis://localhost:6379/0

# Publish mode: AUTO (direct publish) | SEMI (draft + manual approval)
MODE=SEMI

# MVP limits
MOSCOW_SHARE=0.7
ARTICLES_PER_DAY=1

# Optional: API keys (leave empty to use stubs)
SERP_API_KEY=
LLM_API_KEY=
ANTI_PLAGIAT_API_KEY=
TILDA_PUBLIC_KEY=
TILDA_SECRET_KEY=
TILDA_PROJECT_ID=

